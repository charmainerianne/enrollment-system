<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Enrollment System</title>
    <style>
        /* Basic CSS for a clean, user-friendly layout */
        body {
            font-family: Arial, sans-serif;
            background-color: #f9fafb;
            margin: 0;
            padding: 0;
            color: #333;
        }
        header {
            background-color: #004080;
            color: white;
            padding: 1rem 2rem;
            font-size: 1.5rem;
            font-weight: bold;
        }
        nav {
            background-color: #e0e7ff;
            padding: 0.5rem 2rem;
        }
        nav a {
            color: #004080;
            text-decoration: none;
            margin-right: 1.5rem;
            font-weight: 600;
        }
        nav a:hover {
            text-decoration: underline;
        }
        main {
            padding: 2rem;
            max-width: 960px;
            margin: 0 auto;
            background-color: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 6px;
        }
        footer {
            text-align: center;
            padding: 1rem;
            font-size: 0.9rem;
            color: #666;
            margin-top: 2rem;
        }
        .btn {
            background-color: #004080;
            color: white;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }
        .btn:hover {
            background-color: #003366;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 0.75rem;
            text-align: left;
        }
        th {
            background-color: #f0f4ff;
        }
        .form-group {
            margin-bottom: 1rem;
        }
        label {
            display: block;
            margin-bottom: 0.3rem;
            font-weight: 600;
        }
        input[type="text"],
        input[type="email"],
        input[type="password"],
        select,
        textarea {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
        }
        .validation-error {
            color: #cc0000;
            font-size: 0.9rem;
            margin-top: 0.2rem;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        Enrollment System
    </header>
    <nav>
        <a href="@Url.Action("Index", "Home")">Home</a>
        <a href="@Url.Action("Index", "Student")">Students</a>
        <a href="@Url.Action("Index", "Course")">Courses</a>
        <a href="@Url.Action("Index", "Enrollment")">Enrollments</a>
        <a href="@Url.Action("Index", "Schedule")">Schedules</a>
        <a href="@Url.Action("Login", "Account")">Login</a>
    </nav>
    <main role="main" class="content">
        @RenderBody()
    </main>
    <footer>
        &copy; @DateTime.Now.Year Enrollment System. All rights reserved.
    </footer>
    <script>
        // Basic JavaScript for user-friendly interactions can be added here
        // Example: simple form validation or UI enhancements
        document.addEventListener('DOMContentLoaded', function () {
            // Example: alert on form submit (remove or replace with real logic)
            var forms = document.querySelectorAll('form');
            forms.forEach(function(form) {
                form.addEventListener('submit', function() {
                    // Placeholder for form validation or other logic
                });
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
