@model IEnumerable<EnrollmentSystem.Models.Enrollment>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Enrollments";
}

<div class="max-w-6xl mx-auto mt-10 p-6 bg-white rounded shadow-md">
    <h1 class="text-3xl font-bold mb-6 text-[#2ecc71]">Enrollments</h1>

    <a href="/Enrollment/Create" class="inline-block mb-4 bg-[#2ecc71] hover:bg-[#27ae60] text-white font-bold py-2 px-4 rounded transition">
        <i class="fas fa-plus mr-2"></i> New Enrollment
    </a>

    <table class="min-w-full border border-gray-300 rounded">
        <thead class="bg-[#f1c40f] text-[#2d3436]">
            <tr>
                <th class="py-2 px-4 border-b border-gray-300">Student ID</th>
                <th class="py-2 px-4 border-b border-gray-300">Course</th>
                <th class="py-2 px-4 border-b border-gray-300">Semester/Year</th>
                <th class="py-2 px-4 border-b border-gray-300">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model)
            {
                <tr class="hover:bg-gray-100">
                    <td class="py-2 px-4 border-b border-gray-300">@enrollment.StudentId</td>
                    <td class="py-2 px-4 border-b border-gray-300">@enrollment.Course?.CourseName</td>
                    <td class="py-2 px-4 border-b border-gray-300">@enrollment.SemesterYear?.Year</td>
                    <td class="py-2 px-4 border-b border-gray-300">
                        <a href="/Enrollment/Edit/@enrollment.EnrollmentId" class="text-[#f1c40f] hover:text-yellow-500 mr-4">Edit</a>
                        <a href="/Enrollment/Delete/@enrollment.EnrollmentId" class="text-red-600 hover:text-red-800">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
