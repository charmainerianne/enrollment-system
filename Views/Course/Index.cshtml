@model IEnumerable<EnrollmentSystem.Models.Course>

@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Courses</h2>

<p>
    @Html.ActionLink("Add New Course", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Credits</th>
            <th>Prerequisite</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Credits</td>
                <td>@(course.PrerequisiteCourse != null ? course.PrerequisiteCourse.Title : "None")</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = course.CourseId }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Edit", "Edit", new { id = course.CourseId }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = course.CourseId }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
