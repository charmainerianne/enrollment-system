@model EnrollmentSystem.Models.Schedule

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Schedule Details";
}

<div class="max-w-4xl mx-auto mt-10 p-6 bg-white rounded shadow-md">
    <h2 class="text-2xl font-bold mb-6 text-[#2ecc71]">Schedule Details</h2>

    <div class="mb-4">
        <strong>Course:</strong> @Model.Course?.CourseName
    </div>
    <div class="mb-4">
        <strong>Room:</strong> @Model.Room?.RoomName
    </div>
    <div class="mb-4">
        <strong>Instructor:</strong> @Model.Instructor?.FullName
    </div>
    <div class="mb-4">
        <strong>Semester/Year:</strong> @Model.SemesterYear?.Year
    </div>
    <div class="mb-4">
        <strong>Day:</strong> @Model.Day
    </div>
    <div class="mb-4">
        <strong>Time:</strong> @Model.Time
    </div>

    <a href="/Schedule/Edit/@Model.ScheduleId" class="inline-block bg-[#2ecc71] hover:bg-[#27ae60] text-white font-bold py-2 px-4 rounded transition mr-2">Edit</a>
    <a href="/Schedule/Index" class="inline-block bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded transition">Back to List</a>
</div>
